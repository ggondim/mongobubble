{
  "name": "mongobubble",
  "private": true,
  "scripts": {
    "build:core": "npm -w packages/core run build",
    "build:json-schema": "npm -w packages/json-schema run build",
    "build:w:mongobubble": "npm -w packages/mongobubble run build",
    "build:online-archive": "npm -w packages/online-archive run build",
    "build:w:tsed": "npm -w packages/tsed run build",
    "build:all": "npm-run-all -l build:core build:json-schema build:online-archive --parallel build:w:**",
    "prepare": "npx husky install",
    "hook:commit-msg": "npx --no -- commitlint --edit $1",
    "hook:pre-commit": "npm run lint; npm run ts:lint; npm run test",
    "test": "npm -w packages/core run test; npm -w packages/mongobubble run test; npm -w packages/tsed run test;"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@jest/globals": "^29.3.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "ctix": "^0.6.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "packages/core",
    "packages/mongobubble",
    "packages/json-schema",
    "packages/online-archive",
    "packages/tsed"
  ]
}
